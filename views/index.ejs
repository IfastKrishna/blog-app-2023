<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Blog</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="container mx-auto p-4">
      <h1 class="text-4xl font-bold mb-4">All Posts</h1>
      <a href="/new" class="bg-blue-500 text-white px-4 py-2 rounded"
        >Create a New Post</a
      >
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
        <% posts.forEach(post => { %>
        <div class="bg-white shadow-md rounded-lg p-4">
          <img
            src="<%= post.imageUrl %>"
            alt="<%= post.title %>"
            class="w-full h-48 object-cover rounded"
          />
          <h2 class="text-2xl font-semibold mt-2"><%= post.title %></h2>
          <p class="mt-2"><%= post.content.substring(0, 100) %>...</p>
          <div class="mt-4 flex space-x-2">
            <a href="/post/<%= post.id %>" class="text-blue-500">View</a>
            <a href="/edit/<%= post.id %>" class="text-yellow-500">Edit</a>
            <form action="/delete/<%= post.id %>" method="POST" class="inline">
              <button type="submit" class="text-red-500">Delete</button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
